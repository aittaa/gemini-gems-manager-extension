{
  "manifest_version": 3,
  "name": "Gems Manager for Google Gemini",
  "version": "0.1.0",

  "icons": {
    "16": "assets/icons/icon16.png",
    "32": "assets/icons/icon32.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "description": "Powerful Gems management tool for Google Gemini.",
  "homepage_url": "https://github.com/aittaa/gemini-gems-manager-extension",
  "short_name": "Gems Manager",

  "permissions": [
    "storage"
  ],

  "optional_permissions": [],

  "__chrome__host_permissions": [
    "https://gemini.google.com/*"
  ],

  "__chrome__optional_host_permissions": [],

  "__firefox__optional_host_permissions": [],

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },

  "__chrome|firefox__author": "Hyeon Kim",

  "__firefox__browser_specific_settings": {
    "gecko": {
      "id": "{754FB1AD-CC3B-4856-B6A0-7786F8CA9D17}",
      "strict_min_version": "109.0"
    }
  },

  "__chrome__minimum_chrome_version": "88",

  "action": {
    "default_popup": "Popup/popup.html",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "32": "assets/icons/icon32.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    },
    "default_title": "Gems Manager for Google Gemini"
  },

  "__chrome__options_page": "Options/options.html",
  "options_ui": {
    "page": "Options/options.html",
    "open_in_tab": true
  },

  "background": {
    "__chrome__service_worker": "assets/js/background.bundle.js",
    "__chrome__type": "module",
    "__firefox__scripts": ["assets/js/background.bundle.js"],
    "__firefox__type": "module"
  },

  "content_scripts": [
    {
      "run_at": "document_start",
      "matches": [
        "https://gemini.google.com/*"
      ],
      "css": [],
      "js": [
        "assets/js/contentScript.bundle.js"
      ]
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["assets/js/*.js", "assets/css/*.css", "assets/icons/*"],
      "matches": ["https://gemini.google.com/*"]
    }
  ]
}